<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_top_univauthentification" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/light_grey">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="학교 이메일"
            android:textColor="@color/dark_grey" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="100"
        android:orientation="horizontal">
        <AutoCompleteTextView
            android:id="@+id/autoText_univemail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/textbox"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/text_univdomain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:text="\@sju.ac.kr"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/btn_sendEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="발송하기"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_authentification_confirm"
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/main_color"
        android:elevation="3dp"
        android:text="인증 완료"
        android:textColor="@color/white"
        android:textSize="16dp"/>

</LinearLayout>


