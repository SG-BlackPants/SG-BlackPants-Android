<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/middle_searchresult"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#0DFF7473"
    android:elevation="3dp"
    android:gravity="center_vertical">


    <TextView
        android:id="@+id/text_resultCount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:text="검색 중"
        android:textColor="@color/darker_grey"
        android:textSize="13dp" />

    <ProgressBar
        android:id="@+id/progressbar_resultCount"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/text_resultCount"
        android:minHeight="15dp"
        android:minWidth="15dp" />

    <Button
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@+id/btn_searchresult_back"
        android:background="@android:color/transparent"
        android:text="검색 필터(조건)"
        android:textColor="@color/darker_grey"
        android:textSize="13dp" />
</RelativeLayout>
